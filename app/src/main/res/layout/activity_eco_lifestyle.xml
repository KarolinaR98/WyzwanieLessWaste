<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".EcoLifestyle">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:contentDescription="TODO"
        android:src="@drawable/logo"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/guidelinex"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/guidelin_xe"
        app:layout_constraintStart_toStartOf="@+id/guidelinex___"
        app:layout_constraintTop_toTopOf="@+id/guidelinex__"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinex_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinex__"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinex___"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelin_xe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_linex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/_guidelinex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1.0" />

    <Button
        android:id="@+id/ecoMiasto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="Eko miasto"
        android:textAllCaps="false"
        android:textColor="#658361"
        app:layout_constraintBottom_toTopOf="@+id/guidelinex_"
        app:layout_constraintEnd_toStartOf="@+id/guidelin_xe"
        app:layout_constraintStart_toStartOf="@+id/guidelinex___"
        app:layout_constraintTop_toTopOf="@+id/guidelinex__"
        app:layout_constraintVertical_bias="0.55" />

    <Button
        android:id="@+id/polecane"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="Polecane marki"
        android:textAllCaps="false"
        android:textColor="#658361"
        app:layout_constraintBottom_toTopOf="@+id/guidelinex_"
        app:layout_constraintEnd_toStartOf="@+id/guidelin_xe"
        app:layout_constraintStart_toStartOf="@+id/guidelinex___"
        app:layout_constraintTop_toTopOf="@+id/guidelinex__"
        app:layout_constraintVertical_bias="0.65" />

    <Button
        android:id="@+id/kupony"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="Kupony"
        android:textAllCaps="false"
        android:textColor="#658361"
        app:layout_constraintBottom_toTopOf="@+id/guidelinex_"
        app:layout_constraintEnd_toStartOf="@+id/guidelin_xe"
        app:layout_constraintStart_toStartOf="@+id/guidelinex___"
        app:layout_constraintTop_toTopOf="@+id/guidelinex__"
        app:layout_constraintVertical_bias="0.75" />

</androidx.constraintlayout.widget.ConstraintLayout>